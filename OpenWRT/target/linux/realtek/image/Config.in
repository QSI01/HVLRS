config RTK_BOARD_MTD_LAYOUT
	bool
	depends on TARGET_realtek
	default n

menuconfig RTK_BOARD_MTD_CUSTOMIZE_FWSIZE
	bool "Customized firmware size"
	depends on RTK_BOARD_MTD_LAYOUT
	help
	  Use static FW layout partition without fwdesc table.

	config RTK_MTD_ROOTFS_SIZE
		int "SPI 1st rootfs size (in KB)" if RTK_BOARD_MTD_CUSTOMIZE_FWSIZE
		depends on RTK_BOARD_MTD_LAYOUT
		default 2240
		help
		  Default size is 2240KB for 8MB SPI layout and could be increased
		  if either larger SPI NOR flash is used or layout is modified.
		  Need to enable overlay partition or modify initrd entry in DTS
		  on size over 4MB.

	config RTK_MTD_UBOOT_SIZE
		int "SPI uboot size (in KB)" if RTK_BOARD_MTD_CUSTOMIZE_FWSIZE
		depends on RTK_BOARD_MTD_LAYOUT
		default 512
		help
		  Default size is 512KB for 8MB SPI layout.

	config RTK_MTD_KERNEL_SIZE
		int "SPI kernel size (in KB)" if RTK_BOARD_MTD_CUSTOMIZE_FWSIZE
		depends on RTK_BOARD_MTD_LAYOUT
		default 3520
		help
		  Default size is 3520KB for 8MB SPI layout.

	config RTK_MTD_DTB_SIZE
		int "SPI kernel size (in KB)" if RTK_BOARD_MTD_CUSTOMIZE_FWSIZE
		depends on RTK_BOARD_MTD_LAYOUT
		default 64
		help
		  Default size is 64KB for 8MB SPI layout.

	config RTK_MTD_AFW_SIZE
		int "SPI audio FW size (in KB)" if RTK_BOARD_MTD_CUSTOMIZE_FWSIZE
		depends on RTK_BOARD_MTD_LAYOUT
		default 1408
		help
		  Default size is 1408KB for 8MB SPI layout.

	config RTK_MTD_LOGO_SIZE
		int "SPI boot image size (in KB)" if RTK_BOARD_MTD_CUSTOMIZE_FWSIZE
		depends on RTK_BOARD_MTD_LAYOUT
		default 320
		help
		  Default size is 320KB for 8MB SPI layout.

config RTK_BOARD_FWDESC_LAYOUT
	bool
	select PACKAGE_rtk-imagefile
	select PACKAGE_iperf
	select PACKAGE_iperf3
	depends on TARGET_realtek && !RTK_BOARD_MTD_LAYOUT
	default y
	help
	  Use Realtek FW layout partition with fwdesc table.
