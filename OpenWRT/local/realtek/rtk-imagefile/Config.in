choice
	prompt "Realtek eMMC layout size"
	default RTK_IMG_LAYOUT_SIZE_4GB
	depends on RTK_BOARD_FWDESC_LAYOUT && PACKAGE_rtk-imagefile && PACKAGE_kmod-rtk-emmc
	help
	  Select the size of the target eMMC

	config RTK_IMG_LAYOUT_SIZE_4GB
		bool "4GB"

	config RTK_IMG_LAYOUT_SIZE_8GB
		bool "8GB"

	config RTK_IMG_LAYOUT_SIZE_16GB
		bool "16GB"

	config RTK_IMG_LAYOUT_SIZE_32GB
		bool "32GB"
endchoice

config TARGET_NAS_IMG_EMMC_SWAP
	bool "Enable eMMC swap"

config RTK_NAS_IMG_DUAL_BOOT
	bool "Dual boot"
	depends on RTK_BOARD_FWDESC_LAYOUT && PACKAGE_rtk-imagefile && PACKAGE_kmod-rtk-emmc

menuconfig RTK_NAS_IMG_CUSTOMIZE_FWSIZE
	bool "FW size customization"
	default y if RTK_NAS_IMG_DUAL_BOOT
	depends on RTK_BOARD_FWDESC_LAYOUT && PACKAGE_rtk-imagefile && PACKAGE_kmod-rtk-emmc
	help
	  Set customized size of minimum normal FWs.

	config KERNELDT_MINSIZE
		int
		prompt "Minimum size of kernel DTB (in KB)" if RTK_NAS_IMG_CUSTOMIZE_FWSIZE
		default 256
		depends on RTK_BOARD_FWDESC_LAYOUT && PACKAGE_rtk-imagefile && PACKAGE_kmod-rtk-emmc
		help
		  The size reserved on flash layout for kernel DTB

	config RESCUEDT_MINSIZE
		int
		prompt "Minimum size of rescue kernel DTB (in KB)" if RTK_NAS_IMG_CUSTOMIZE_FWSIZE
		default 256
		depends on RTK_BOARD_FWDESC_LAYOUT && PACKAGE_rtk-imagefile && PACKAGE_kmod-rtk-emmc
		help
		  The size reserved on flash layout for rescue kernel DTB

	config LINUX_MINSIZE
		int
		prompt "Minimum size of kernel image (in KB)" if RTK_NAS_IMG_CUSTOMIZE_FWSIZE
		default 13312
		depends on RTK_BOARD_FWDESC_LAYOUT && PACKAGE_rtk-imagefile && PACKAGE_kmod-rtk-emmc
		help
		  The size reserved on flash layout for Linux kernel image

	config RESCUEROOTFS_MINSIZE
		int
		prompt "Minimum size of rescue rootfs (in KB)" if RTK_NAS_IMG_CUSTOMIZE_FWSIZE
		default 4096
		depends on RTK_BOARD_FWDESC_LAYOUT && PACKAGE_rtk-imagefile && PACKAGE_kmod-rtk-emmc
		help
		  The size reserved on flash layout for rescue rootfs

	config AUDIO_MINSIZE
		int
		prompt "Minimum size of audio FW (in KB)" if RTK_NAS_IMG_CUSTOMIZE_FWSIZE
		default 4096
		depends on RTK_BOARD_FWDESC_LAYOUT && PACKAGE_rtk-imagefile && PACKAGE_kmod-rtk-emmc
		help
		  The size reserved on flash layout for audio FW

	config LOGO_MINSIZE
		int
		prompt "Minimum size of logo image (in KB)" if RTK_NAS_IMG_CUSTOMIZE_FWSIZE
		default 8192
		depends on RTK_BOARD_FWDESC_LAYOUT && PACKAGE_rtk-imagefile && PACKAGE_kmod-rtk-emmc
		help
		  The size reserved on flash layout for logo image
