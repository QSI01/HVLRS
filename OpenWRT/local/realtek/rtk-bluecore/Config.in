menuconfig UPDATE_AUDIO_FW
	bool "Update audio FW to dailybuild"
	default y
	depends on PACKAGE_rtk-bluecore && (TARGET_realtek_rtd129x || TARGET_realtek_rtd139x || TARGET_realtek_rtd16xx)
	help
	  Sync to latest dailybuild or keep at a specific tag.


	choice
		prompt "Audio fw address"
		default AUDIO_ADDR_NEW
		depends on UPDATE_AUDIO_FW
		help
		  Choose the audio fw address

		config AUDIO_ADDR_LEGACY
			bool "0x01b00000"
			depends on TARGET_realtek_rtd129x

		config AUDIO_ADDR_NEW
			bool "0x0F900000"
	endchoice
