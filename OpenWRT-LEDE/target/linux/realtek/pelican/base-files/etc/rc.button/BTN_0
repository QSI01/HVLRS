#!/bin/sh

. /lib/functions.sh

case "$ACTION" in
pressed)
		echo "disable usb port" > /dev/console
		echo none > /sys/devices/platform/gpio-leds/leds/USB2.0_BC1.2_PWR/trigger
;;

released)
		echo "enable usb port" > /dev/console
		echo default-on > /sys/devices/platform/gpio-leds/leds/USB2.0_BC1.2_PWR/trigger
;;
esac

return 0
