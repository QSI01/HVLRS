START=88
USE_PROCD=1

start_service() {
	user_exists http || user_add http
	[ -d /var/log/lighttpd ] || {
		mkdir -m 0775 -p /var/log/lighttpd
		chgrp www-data /var/log/lighttpd
	}

	procd_open_instance
	procd_set_param command /usr/sbin/lighttpd -D -f /etc/lighttpd/lighttpd.conf
	procd_set_param respawn
	procd_close_instance
}

